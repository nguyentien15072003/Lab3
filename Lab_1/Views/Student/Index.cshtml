@section Script{
    <script>
        var table = document.querySelector("table");
        table.onclick = function onTableClick() {
            table.style = "background-color:yellow;"
        }
    </script>
}
@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}
@model IEnumerable<Student>//collection danh sach sinh vien 

<a asp-action="Create" class="btn btn-primary">Create Student</a>
<table class="table table-striped">
    <thread>
        <tr>@*tieu de cua bang*@
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Ngành</th>
            <th>Giới tính</th>
            <th>Hệ đào tạo</th>
            <th>Địa chỉ</th>
            <th>Email</th>
            <th>Điểm</th>
        </tr>
    </thread>
    <tbody>
        @foreach(var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.DateOfBirth</td>
                @{
                    string str = "";
                    switch (s.Branch)
                    {
                        case Branch.IT:
                            str = "CNTT";
                            break;
                        case Branch.BE:
                            str = "Kinh tế";
                            break;
                        case Branch.CE:
                            str = "Công trình";
                            break;
                        case Branch.EE:
                            str = "Điện - Điện tử";
                            break;
                    }
                }
                <td>@str</td>
                <td>@(s.Gender == Gender.Male? "Nam" : "Nữ")</td>
                <td>@(s.IsRegular ? "Chính quy" : "Tại Chức")</td>
                <td>@s.Address</td>
                <td>@s.Email</td>
                <td>@s.Marks</td>
            </tr>
        }
    </tbody>
</table>